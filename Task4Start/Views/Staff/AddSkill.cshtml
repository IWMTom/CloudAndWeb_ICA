@model Task4Start.Models.StaffSkill

@{
    ViewBag.Title = "Add Skill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Skill for @Html.DisplayFor(model => model.fullName) (@Html.DisplayFor(model => model.staffCode))</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.staffCode)

    @Html.DropDownList("skillCode", null, htmlAttributes: new { @class = "form-control" })

    <br />

    <input type="submit" value="Add" class="btn btn-default" />
}